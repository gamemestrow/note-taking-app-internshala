{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Other Outputs */
    "sourceMap": true,

    /* Stricter Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module Handling */
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
